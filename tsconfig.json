{
    "compilerOptions": {
        "allowJs": false,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "module": "CommonJS",
        "moduleResolution": "Node",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "outDir": "./dist",
        "resolveJsonModule": true,
        "rootDir": "./src",
        "target": "ES6"
    },
    "exclude": ["node_modules", ".env"],
    "include": ["src/**/*.ts", "src/*.ts"]
}